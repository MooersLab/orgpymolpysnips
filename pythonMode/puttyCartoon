cmd.do("show cartoon;")
cmd.do("cartoon putty;")
cmd.do("set cartoon_smooth_loops, 0;")
cmd.do("set cartoon_flat_sheets, 0;")
cmd.do("set cartoon_smooth_loops,0;")
cmd.do("## unset cartoon_smooth_loops;")
$0
